{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",

  "ServerOptions": {
    "Name": "Server",
    //最大接受封包 1m
    "MaxPackageLength": 1048576,
    "ReceiveBufferSize": 8192,
    "SendBufferSize": 8192,
    "ReceiveTimeout": 1000,
    "SendTimeout": 1000,
    "Listeners": [
      {
        "Ip": "Any",
        "Port": 4040,
        "BackLog": 65535
      }
    ]
  }
}
